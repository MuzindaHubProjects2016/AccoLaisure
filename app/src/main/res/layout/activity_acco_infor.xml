<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acco_infor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="com.example.murove.laisureApp.activities.acco_infor">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/acco1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imgaccoinfor1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Luxury Suits Beds"
        android:ems="10"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/imgaccoinfor1"
        android:layout_alignParentStart="true"
        android:id="@+id/txtinforname1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="+263 735765142"
        android:ems="10"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/txtinforname1"
        android:id="@+id/txtaccoinfophone1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Victfalls"
        android:ems="10"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/txtaccoinfophone1"
        android:id="@+id/txtaccoinforcity1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="$150"
        android:ems="10"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/txtaccoinforcity1"
        android:id="@+id/txtaccoinforcost1" />


</RelativeLayout>
