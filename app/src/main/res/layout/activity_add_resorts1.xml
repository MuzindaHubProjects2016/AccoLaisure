<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_resorts1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.murove.laisureApp.activities.AddResorts"
    android:weightSum="1">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtResortName"
        android:hint="Resort Name"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:text=""
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtResortPhoneNumber"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Phone Number"
        android:text=""
        android:layout_below="@+id/txtResortName"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/txtBookingHouse"
        android:ems="10"
        android:hint="Booking House"
        android:textColor="#000"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtResortPhoneNumber"
        android:layout_alignParentStart="true"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtActivities"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="#000"
        android:hint="Activities"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtResortPhoneNumber"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtResortCity"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="#000"
        android:hint="City"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtActivities"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtResortCost"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="#000"
        android:hint="Cost"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtCity"
        android:layout_alignParentEnd="true"/>

    <RatingBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtResortCost"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Save"
        android:id="@+id/btnSave"
        android:background="#2B35c6"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

</LinearLayout>

