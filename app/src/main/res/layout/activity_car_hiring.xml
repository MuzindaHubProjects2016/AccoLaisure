<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_car_hire"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.murove.laisureApp.activities.AddCarHire">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCompanyName"
        android:hint="Company Name"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:text=""
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/txtCompanyPhoneNumber"
        android:textColor="#000"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Company Phone Number"
        android:text=""
        android:layout_below="@+id/txtCompanyName"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/txtCompanyAddress"
        android:ems="10"
        android:hint="Company Address"
        android:textColor="#000"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtCompanyPhoneNumber"
        android:layout_alignParentStart="true"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCarModel"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="#000"
        android:hint="Car Model"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtCompanyAddress"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNumberPlate"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="#000"
        android:hint="Number Plate"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtCarModel"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDriverName"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="#000"
        android:hint="Driver Name"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtNumberPlate"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDriverContact"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="#000"
        android:hint="Drive Contact"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtDriverName"
        android:layout_alignParentEnd="true"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCost"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="#000"
        android:hint="Cost"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtDriverContact"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Save"
        android:id="@+id/btnSaveCars"
        android:background="#2B35c6"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp" />


</LinearLayout>
